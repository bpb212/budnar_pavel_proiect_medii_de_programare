@page
@model budnar_pavel_proiect_medii_de_programare.Pages.Mechanics.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mechanic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.Team.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.Role.Name)
        </dd>
        <dt class="col-sm-2">
            Duties
        </dt>
        <dd class="col-sm-10">
            @foreach (var roleDuty in Model.Mechanic.Role.RoleDuty)
            {
                @roleDuty.Duty.DutyName
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Mechanic?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
